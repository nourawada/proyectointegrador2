<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head')  %> 

<body>
	<!-- Header -->
	<% if (locals.user) { %> 
		<%- include('partials/headerLogueado') %>
	<% } else { %>
		<%- include('partials/header') %>
	<% } %>  
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<% if (products.length !=0) { %>
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda de: "<i><%= query %></i>"</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for ( let i=0 ; i < products.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						
						<a href="/product/<%= products[i].id  %>  ">
							<figure class="product-box_image">
								<img src="/images/products/<%= products[i].image %>" alt="<%= products[i].name %>">
							</figure>
							<article class="product-box_data">
								<h2> <%= products[i].name %> </h2>
								<p><%= `Marca: ${products[i].brand}` %> </p>
								<p><%= `${products[i].descripcion}` %></p>
									
							</article>
						</a>
					</section>
				</div>
				<% } %>
				<% } else { %> 
					<h2>No se encontraron resultados para: "<i><%= query %></i>"</h2>
				<% } %> 

	<!-- footer -->
<%- include('./partials/footer')  %> 
	<!-- /footer -->
</body>

</html>